#select STATIC_CONFIG or FILE_CONFIG
#STATIC_CONFIG need to modify src/config.h
STATIC_CONFIG=n
FILE_CONFIG=y
#select DYNAMIC or STATIC
#STATIC build only one binary
DYNAMIC=y
STATIC=n
#multi threads server
#if mono thread only one server may run
VTHREAD=y
VTHREAD_TYPE=fork
#select the maximum of host to manage (host/port and virtual)
MAX_SERVERS=4

#modules selection:

#support HTTPS connection
MBEDTLS=y
#select STATIC_FILE or SENDFILE not the both
#the both send regular files.
#STATIC_FILE is smaller but slower
STATIC_FILE=y
SENDFILE=y
DIRLISTING=y
RANGEREQUEST=y
#support CGI/1.1
CGI=y
#support Authentification Basic
AUTH=y
AUTHN_BASIC=y
AUTHN_DIGEST=y
AUTHZ_SIMPLE=y
#support of Virtual Hosting
VHOSTS=y
#support of request method check
METHODLOCK=y
#add Server Software name into the headers
SERVERHEADER=y
#support of the websocket
WEBSOCKET=y
WS_ECHO=y
WS_CHAT=y

HOST_UTILS=n

#prefix=
#bindir=
#sbindir=
#includedir=
#libdir=
#sysconfdir=

#sysroot=
#CROSS_COMPILER=
