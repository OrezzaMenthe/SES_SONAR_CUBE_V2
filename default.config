#select STATIC_CONFIG or FILE_CONFIG
#STATIC_CONFIG need to modify src/config.h
STATIC_CONFIG=n
FILE_CONFIG=y
#select DYNAMIC or STATIC
#STATIC build only one binary
DYNAMIC=y
STATIC=n
#multi threads server
#if mono thread only one server may run
VTHREAD=y

#modules selection:

#support HTTPS connection
MBEDTLS=y
#select STATIC_FILE or SENDFILE not the both
#the both send regular files.
#STATIC_FILE is smaller but slower
STATIC_FILE=n
SENDFILE=y
#support CGI/1.1
CGI=y

prefix="/usr"
bindir="/usr/bin"
sbindir="/usr/sbin"
includedir="/usr/include"
libdir="/usr/lib64/ouistiti"
sysconfdir="/etc"
